{
    "name": "shoper/recruitment_task",
    "type": "api",
    "description": "Api for calculating the distance from the Shoper.pl headquarters in any place provided.",
    "config": {
        "bin-dir": "bin",
        "platform": {
            "php": "7.4"
        },
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "Shoper\\Recruitment\\Task\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Shoper\\Recruitment\\Task\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": "^7.4",
        "ext-curl": "*",
        "monolog/monolog": "2.0.*"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.19",
        "phpunit/phpunit": "~9.5.4"
    }
}